<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%-61(%d{HH:mm:ss.SSS} %highlight(%-5.5level) [%10.10t] %cyan(%-20.20logger{0})) : %highlight(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="org.aggregator.job.config" level="debug"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>